@model AdministradorDeBarberia.Models.Cita

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Eliminar cita</h1>

    <h3>¿Estás seguro de que quieres eliminar esta cita?</h3>
    <div>
       
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaHora)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaHora)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Correo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Empleado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Empleado.Especialidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Servicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Servicio.Nombre)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CitaId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Volver</a>
        </form>
    </div>

</div>
