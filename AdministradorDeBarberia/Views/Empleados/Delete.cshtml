@model AdministradorDeBarberia.Models.Empleado

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Eliminar empleado</h1>

    <h3>¿Estás seguro de que quieres eliminar este empleado?</h3>
    <div>
        <h4>Empleado</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Especialidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Especialidad)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EmpleadoId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-link"
               asp-action="Index">Volver</a>
        </form>
    </div>

</div>
