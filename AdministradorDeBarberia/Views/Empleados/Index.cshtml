@model IEnumerable<AdministradorDeBarberia.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Lista de empleados</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear empleado</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especialidad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especialidad)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmpleadoId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.EmpleadoId">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.EmpleadoId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
